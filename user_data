#cloud-config

coreos:
  etcd2:
    name: $NAME
    advertise-client-urls: $ADVERTISE_CLIENT_URLS
    initial-advertise-peer-urls: $INITIAL_ADVERTISE_PEER_URLS
    discovery: https://discovery.etcd.io/$TOKEN
    listen-peer-urls: $LISTEN_PEER_URLS
    listen-client-urls: $LISTEN_CLIENT_URLS
  units:
    - name: etcd2.service
      command: start
    - name: fleet.service
      command: start
    - name: "k8s-setup.service"
      command: start
      content: |
        [Unit]
        Description=Kubernetes setup
        After=etcd2.service
        Requires=etcd2.service
        
        [Service]
        Restart=on-failure
        StartLimitInterval=5min
        StartLimitBurst=4
        StartLimitAction=reboot-force
        Environment=ADVERTISE_IP=$ADVERTISE_IP
        Environment=ETCD_ENDPOINTS=$ETCD_ENDPOINTS
        Environment=CONTROLLER_ENDPOINT=$CONTROLLER_ENDPOINT
        ExecStart=/media/configdrive/openstack/latest/setup-node.sh $NODE_TYPE

ssh_authorized_keys:
  - $SSHKEY
hostname: $HOSTNAME
